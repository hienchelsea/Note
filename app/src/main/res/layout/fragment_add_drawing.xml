<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    >
    <com.example.cachua.note.ui.config.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="18dp"
            android:src="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvSave"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="17dp"
                android:src="@drawable/iocn_check" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhileDrak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imvEraser"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="12dp"
                android:src="@drawable/icon_rubber" />

            <ImageView
                android:id="@+id/imvSize"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="12dp"
                android:src="@drawable/icon_dot_circle" />

            <ImageView
                android:id="@+id/imvColor"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="12dp"
                android:src="@drawable/icon_palette" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="12dp"
                android:src="@drawable/icon_opacity" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1" />
        </LinearLayout>

        <SeekBar

            android:visibility="gone"
            android:id="@+id/sbSize"
            android:layout_width="224dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:progressTint="@color/colorPrimary"
            android:thumbTint="@color/colorPrimary"
            android:max="100"
            android:min="0" />

        <SeekBar
            android:visibility="gone"
            android:id="@+id/sbOpacity"
            android:layout_width="224dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:progressTint="@color/colorPrimary"
            android:thumbTint="@color/colorPrimary"
            android:max="100"
            android:min="0" />

        <LinearLayout
            android:id="@+id/llColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_color_black"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_black" />

            <ImageView
                android:id="@+id/image_color_red"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_red" />

            <ImageView
                android:id="@+id/image_color_yellow"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_yellow" />

            <ImageView
                android:id="@+id/image_color_green"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_green" />

            <ImageView
                android:id="@+id/image_color_blue"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_blue" />

            <ImageView
                android:id="@+id/image_color_pink"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_pink" />

            <ImageView
                android:id="@+id/image_color_brown"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:src="@drawable/circle_brown" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>